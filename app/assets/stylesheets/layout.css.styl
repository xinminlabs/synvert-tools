@import './mixins'

*, *:before, *:after {
  box-sizing: border-box
}

body, html {
  margin: 0
  padding: 0
}

body {
  -webkit-font-smoothing: antialiased
  font-smoothing: antialiased
  background: #FFF

  color: #444
  font: 19px/1.5em "HelveticaNeue", Helvetica, Arial, sans-serif
}

.footer {
  border-top: 1px solid #e5e5e5
  margin-top: 20px
  padding-top: 20px
  padding-bottom: 20px
  text-align: center;
}
