@import './mixins'

*, *:before, *:after {
  box-sizing: border-box
}

body, html {
  margin: 0
  padding: 0
}

body {
  -webkit-font-smoothing: antialiased
  font-smoothing: antialiased
  background: #FFF

  color: #444
  font: 19px/1.5em "HelveticaNeue", Helvetica, Arial, sans-serif
}

span.highlight {
  background-color: #D37979
}

#ruby-editor, #rules-editor {
  position: absolute
  top: 0
  right: 0
  bottom: 0
  left: 0
  height: 400px
}
